{{#unless podcast.episodes}}
  <h3 class="ui center aligned message">It's very quiet in here... start adding some episodes!</h3>
{{/unless}}

{{#if podcast.episodes}}

<table id = "john" class="ui fixed striped table">
  <thead>
    <tr>
      <th id = "john1">Title</th>
      <th id = "john2">Artist</th>
      <th id = "john3">Genre</th>
      <th id = "john4">Duration</th>
      <th id = "john5"> </th>
    </tr>
  </thead>
<tbody>
    {{#each podcast.episodes}}
    <form class = "ui form" action="/podcast/{{../podcast.id}}/updateepisode/{{id}}" method="POST">
    <tr class="fields">
      <td class="field">
        <span class="ui input">
         <input placeholder="Title" type="text" size="30" name="title" autofocus required value = "{{capitalcase title}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input placeholder="Artist" type="text" size="30" name="artist" required value = "{{capitalcase artist}}">
        </span>
      </td>
      <td class="field">
    <span class="ui input">
      <select name="genre" id="genre" style="padding:.6em 2.5em; border:solid lightgray 1px;border-radius:5px;">
        <option value="{{genre}}" selected="selected">{{genre}}</option>
        {{{populate genre}}}       
      </select>       
    </span>
</td>
      <td class="field">
        <span class="ui input">
          <input placeholder="Duration" type="text" name="duration" required value = "{{duration}}">
        </span>
      </td>
      <td class="center aligned">
        <button class="ui blue submit icon button"><i class="icon pencil alternate"></i></button>
      </td>
      <td class="center aligned">
        <a href="/podcast/{{../podcast.id}}/deleteepisode/{{id}}" class="ui red icon button delepisode">
          <i class="icon trash"></i>
        </a>
      </td>
    </tr>
    </form>
    {{/each}}
  </tbody>
  <p>
  <span id="rating"></span>
</p>

  <button class="ui yellow button " id=rateit>
    Rate it! <i class="star icon"></i>
  </button>
</table>



{{/if}}