<form id = "john" class="ui stacked segment form" action="/podcast/{{podcast.id}}/addepisode" method="POST">
  <div class="four fields">
    <div class="field">
      <label>Title</label>
      <input type="text" name="title" autofocus required title = "Please include a valid Title"
      placeholder="Title">
    </div>
    <div class="field">
      <label>Artist</label>
      <input type="text" name="artist" required title = "Please include a valid Artist"
      placeholder="Artist"  >
    </div>
    <div class="field">
    <label>Genre</label>
      <select name="genre" id="genre">
    <option value ="Comedy">Comedy</option>
    <option value ="Science">Science</option>
    <option value ="Philosophy">Philosophy</option>
    <option value ="Sport">Sport</option>
    <option value ="Business">Business</option>
</select>
    </div>
    <div class="field">
  <label>Duration</label>
      <input type="text" name="duration" required title = "Please include a valid Duration"
      placeholder="Duration"  >
    </div>
  </div>
  <button class="ui green submit button">Add Episode</button>
</form>