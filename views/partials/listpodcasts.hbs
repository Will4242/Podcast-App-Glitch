
<div id = "john" class="ui centered cards">
  {{#each podcasts}}
    <div class="ui card">
      <div class="image">
        <img src="{{picture}}">
      </div>
      <div class="content">
        <a class="header">{{uppercase title}}</a>
        <div class="metadata">
          <span class="date">Created: {{formatDate date}}</span>
        </div>
      </div>
      <div class="extra content">
        <a href="/podcast/{{id}}" class="ui blue icon button">
          <i class="icon folder open"></i>
        </a>
        <a href="/dashboard/deletepodcast/{{id}}" class="ui red icon button">
          <i class="icon trash"></i>
        </a>
      </div>
    </div>
  {{/each}}
</div>